<h1 class="display-1 text-center">Basket</h1>
<main>
    <div class= "row">
        <div class= "col-8">
            <div class="basket-products">
                {{#if basketItems.length}}
                {{#each basketItems}}
                        {{> _basketProduct product = this.product quantity = this.quantity}}
                    {{/each}}
                {{else}}
                <div class = "empty-basket">
                    <h3 class="text-center">You have nothing in your basket!!</h3>
                </div>
                {{/if}} 
            </div>
        </div>
        <div class= "col-4">
            <div class="basket-checkout">
                <h3 class = "basket-total">Total: â‚¬{{total}}</h3>

                <a href="checkout" id = "checkout"><button type="button" class="btn checkout-button">Go to Checkout</button></a>
            </div>
            
        </div>
    </div>
    

</main>
