<div class="basket-product-card">
    <div class="row">
        <div class="col">
            <a class="thumbnail" href="/products/{{product.id}}">
                <img src="{{product.thumbnail}}" alt="{{product.title}}" loading="lazy" width="150" height="150">
            </a>
        </div>
        <div class="col">
            <div class="basket-product-info">
                <h3><a class="product-title" href="/products/{{product.id}}">{{product.title}}</a></h3>
                <div class = 'row'>
                    <div class = 'col'>
                        <p class="price"><s>€{{product.price}}</s><span class="discount"> €{{product.discountedPrice}}</span></p>
                        <p class="discount">{{product.discountPercentage}}% OFF!!</p>
                    </div>
                    <div class = 'col'>
                        <p><strong>Rating:</strong> {{product.rating}} / 5</p>
                        <p class="quantity">Quantity: {{quantity}}</p>
                    </div>
                    <div class = 'col'>
                        <button  type="button" class="btn" onclick="RemoveFromBasket({{product.id}}, `${{{product.title}}}`)">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" ><path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"/></svg>
                        </button>
                    </div>
                </div>
            </div>
    </div>
  </div>
</div>

